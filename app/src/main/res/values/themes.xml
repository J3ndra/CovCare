
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CovCare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.CovCare.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.CovCare.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.CovCare.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.CovCare.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.CovCare.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.CovCare.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.CovCare.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.CovCare.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.CovCare.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.CovCare.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.CovCare.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.CovCare.Button</item>
    </style>

    <style name="Theme.CovCare" parent="Base.Theme.CovCare">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
    </style>

    <style name="NavView" parent="Widget.Design.NavigationView">
        <item name="itemShapeFillColor">@color/color_shape_fill</item>
        <item name="itemIconTint">@color/color_selector</item>
        <item name="itemTextColor">@color/color_selector</item>
    </style>

    <style name="Theme.CovCare.NoActionBar" parent="Theme.CovCare">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

</resources>